<Window x:Class="EmployeeList.DepartmentAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeList"
        mc:Ignorable="d"
        Title="DepartmentAddWindow" Height="350" Width="400">
    <Grid>
        <TextBlock Margin="30" HorizontalAlignment="Center">Enter Department</TextBlock>
        <TextBox x:Name="DepartmentInput" Margin="0 50 0 0" VerticalAlignment="Top" Height="20" Width="300"></TextBox>
        <Button Margin="20" VerticalAlignment="Bottom" Height="25" Width="70" Background="LightGray" Click="DepartmentInput_Click">Add</Button>
    </Grid>
</Window>
